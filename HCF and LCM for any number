#include<stdio.h>
int hcf(int a,int b)
{
    int i,flag = 0;
    for(i=2;i<a+b && flag == 0;i++)
    {
        if(a%i == 0 && b%i == 0)
        {
            ++flag;
            printf("The hcf of %d and %d is : %d\n",a,b,i);
        }

}
 if(flag ==0){
         printf("The hcf of %d and %d is : 1",a,b);
 }
}
int lcm(int a,int b)
{
    int i,flag = 0;
    for(i=1;i<=a*b&&flag==0;i++)
    {
        if(i%a ==0 && i%b ==0)
    {
            flag++;
            printf("The lcm of %d and %d is : %d\n",a,b,i);;
         }
      }
}
int main(){
int ch;
int a,b,h,l;
printf("Enter inputs : ");
scanf("%d\t%d",&a,&b);
printf("1: HCF \n2.LCM\n");
scanf("\n%d",&ch);
switch(ch)
{
case 1:
   hcf(a,b);

    break;
case 2:
    l = lcm(a,b);
      break;
      default: break;
    }
}
